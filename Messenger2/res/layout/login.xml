<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:background="@color/background"
android:layout_height="fill_parent"
android:layout_width="fill_parent"
android:orientation="horizontal" android:gravity="top">
<LinearLayout
android:orientation="vertical"
android:layout_height="wrap_content"
android:layout_width="fill_parent"
android:gravity="top" android:layout_gravity="top|center">


<ImageView android:src="@drawable/message" android:layout_width="fill_parent" android:id="@+id/imageView1" android:layout_height="wrap_content" android:baselineAlignBottom="false" android:layout_marginTop="78dip"></ImageView>

<EditText android:id="@+id/user" android:height="10dip" android:layout_width="match_parent" android:layout_gravity="top" android:gravity="top|left" android:maxLength="256" android:typeface="serif" android:textColorHighlight="@color/highlightColor" android:textColor="@color/txtColor" android:textColorHint="@color/hintColor" android:layout_height="wrap_content" android:hint="Användarnamn" android:layout_marginTop="20dip"></EditText>
<EditText android:id="@+id/pass" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLength="32" android:typeface="serif" android:layout_marginTop="15dip" android:textColorHighlight="@color/highlightColor" android:textColor="@color/txtColor" android:textColorHint="@color/hintColor" android:hint="Lösenord" android:password="true"></EditText>
<Button android:text="@string/submit_label_log" android:layout_width="fill_parent" android:id="@+id/login_button" android:layout_height="100dip" android:textSize="50dip" android:layout_marginTop="30dip"></Button>
</LinearLayout>
</LinearLayout>
